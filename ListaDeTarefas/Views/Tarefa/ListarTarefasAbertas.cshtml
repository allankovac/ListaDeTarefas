@model TarefaViewModel

<div class="row card-superior">
    <div class="col-md-6">
        <a href="/Tarefa/ListarTarefasFinalizadas" class="nav-link">
            <div class="card mb-6 card-finalizado">
                <div class="card-header">
                    <h4 class="card-title">Tarefas Finalizadas</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h4>Adiantado: @Model.TotalFinalizadoAntes</h4>
                        </div>
                        <div class="col-md-4">
                            <h4>Atrasado: @Model.TotalFinalizadoDepois</h4>
                        </div>
                        <div class="col-md-4">
                            <h4>Total: @Model.TotalFinalizadoTotal</h4>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-6">
        <div class="card mb-6 card-aberto card-selecionado">
            <div class="card-header">
                <h4 class="card-title">Tarefas Abertas</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h4>Finalizar: @Model.TotalEmAbertoAntes</h4>
                    </div>
                    <div class="col-md-4">
                        <h4>Atrasado: @Model.TotalEmAbertoDepois</h4>
                    </div>
                    <div class="col-md-4">
                        <h4>Total: @Model.TotalEmAbertoTotal</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card lista-tarefas" id="abertas">
    <div class="card-header">
        <h4 class="card-title">Tarefas Abertas</h4>
    </div>
    <div class="card-body">
        <div id="Tarefas-Abertas">
            <div class="card-body">
                <div class="row border-bottom" style="margin-top:10px;">
                    <div class="col-1">
                        <b>ID</b>
                    </div>
                    <div class="col-2">
                        <b>Tarefa</b>
                    </div>
                    <div class="col-3">
                        <b>Descrição</b>
                    </div>
                    <div class="col-2">
                        <b>Data prevista</b>
                    </div>
                    <div class="col-2">
                        <b>Data término</b>
                    </div>
                    <div class="col-2"></div>
                </div>

                @foreach (var item in Model.TarefasNaoFinalizadas)
                {
                    <div class="row border-bottom" style="margin-top:10px;">
                        <div class="col-1">
                            @item.Id
                        </div>
                        <div class="col-2">
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </div>
                        <div class="col-3">
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </div>
                        <div class="col-2">
                            @item.DtTarefaFim.ToString("dd/MM/yyyy")
                        </div>
                        <div class="col-2">
                            -
                        </div>
                        <div class="col-2">
                            <button type="button" class="btn btn-tela" onclick="AjaxFinalizarTarefa(@item.Id)">Finalizar Tarefa</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/listaTarefas.css" />
<script src="~/js/Tarefa/script.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Tarefa/ListarTarefasFinalizadas.js"></script>

}
