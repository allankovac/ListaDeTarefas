                            <div class="col-2">
                                Data termino
                            </div>
                            <div class="col-2"></div>
                        </div>
                    
                    
                        @foreach (var item in Model.TarefasFinalizadas)
                        {
                            <div class="row border-bottom" style="margin-top:10px;">
                                <div class="col-1">
                                    @item.Id
                                </div>
                                <div class="col-2">
                                    @Html.DisplayFor(modelItem => item.Titulo)
                                </div>
                                <div class="col-3">
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </div>
                                <div class="col-2">
                                    @item.DtTarefaFim.ToString("dd/MM/yyyy")
                                </div>
                                <div class="col-2">
                                    @item.DtEncerramento.ToString("dd/MM/yyyy")
                                </div>
                                <div class="col-2">
                                    <button type="button" class="btn btn-primary" onclick="AjaxRestaurarTarefa(@item.Id)">
                                        Restaurar tarefa
                                    </button>
                                </div>
                            </div>
                        }
                    
                
            </div>
        </div>
