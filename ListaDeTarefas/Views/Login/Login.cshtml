@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="    ">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista De Tarefas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ListaDeTarefas.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="col-md-6" style="margin-top: 13%;">
                <div class="card">
                    <div id="feedBack">
                        
                    </div>
                    <div class="card-body">
                        <div class="justify-content-center">
                            <div class="col-md-12">
                                <h1>Login</h1>

                                <div class="offset-md-3 col-md-6">
                                    <form asp-action="Login">
                                        <div id="formularioLogin">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input id="UserName" class="form-control" />
                                            </div>
                                            <div class="form-group">
                                                <label>Senha</label>
                                                <input id="Password" type="password" class="form-control" />
                                            </div>
                                            <div class="row d-flex justify-content-end" style="margin-top: 10px;">
                                                <div class="form-group">
                                                    <button id="btn-entrar" type="button" class="btn btn-tela col-md-12" onclick="AjaxLogin()">Entrar</button>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <p class="link">Ainda não tem conta? <a asp-controller="Login" asp-action="RegistrarUsuario">Cadastrar</a></p>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>        
        button.btn-tela {
          background-color: #43bed7;
          color: #fff;
        }
        .form-control{
            border: 0;
            border-radius: 0;
            border-bottom: 1px solid #dfdfdf;
        }
        input:-webkit-autofill,
        input:-webkit-autofill:focus {
        transition: background-color 600000s 0s, color 600000s 0s;
        }
        h1{
          font-size: 45px;
          color: #069ebd;
          padding: 2px 0 0 0;
          font-family: Arial,sans-serif;
          font-weight: bold;
          text-align: center;
          padding-bottom: 30px;
        }
        h1:after{
          content: ' ';
          display: block;
          width: 100%;
          height: 2px;
          margin-top: 10px;
          background: -webkit-linear-gradient(left, rgba(147,184,189,0) 0%,rgba(147,184,189,0.8) 20%,rgba(147,184,189,1) 53%,rgba(147,184,189,0.8) 79%,rgba(147,184,189,0) 100%); 
          background: linear-gradient(left, rgba(147,184,189,0) 0%,rgba(147,184,189,0.8) 20%,rgba(147,184,189,1) 53%,rgba(147,184,189,0.8) 79%,rgba(147,184,189,0) 100%); 
        }
        .link{
          position: absolute;
          background: #e1eaeb;
          color: #7f7c7c;
          left: 0px;
          height: 20px;
          width: 100%;
          margin-top: 16px;
          padding: 10px 30px 35px 30px;
          font-size: 16px;
          text-align: right;
          border-top: 1px solid #dbe5e8;
 
          -webkit-border-radius: 0 0  5px 5px;
          border-radius: 0 0  5px 5px;
        }
 
        .link a {
          font-weight: bold;
          background: #f7f8f1;
          padding: 6px;
          color: rgb(29, 162, 193);
          margin-left: 10px;
          border: 1px solid #43bed7;
 
          -webkit-border-radius: 4px;
          border-radius: 4px;  
 
          -webkit-transition: all 0.4s linear;
          transition: all 0.4s  linear;
        }
 
        .link a:hover {
          color: #39bfd7;
          background: #f7f7f7;
          border: 1px solid #4ab3c6;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/Login/script.js"></script>
    <script>
        $(document).keypress(function(e) {
            if(e.which === 13)
            {
                $('#btn-entrar').click();
            }
        });
    </script>
</body>
</html>
