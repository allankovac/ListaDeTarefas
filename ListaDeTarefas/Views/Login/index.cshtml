@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="    ">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista De Tarefas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ListaDeTarefas.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="col-md-6" style="margin-top: 13%;">
                <div class="card">
                    <div class="card-body">
                        <div class="justify-content-center">
                            <div class="col-md-12">
                                <div class="offset-md-4">
                                    <h1>Login</h1>
                                </div>

                                <div class="offset-md-4 col-md-4">
                                    <form asp-action="Login">
                                        <div id="formularioLogin">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input asp-for="@Model.UserName" class="form-control" />
                                            </div>
                                            <div class="form-group">
                                                <label>Senha</label>
                                                <input asp-for="@Model.Password" class="form-control" />
                                            </div>
                                            <div class="d-flex justify-content-end" style="margin-top: 10px;">
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary">Entrar</button>
                                            </div>
                                            </div>
                                            <div class="form-group">
                                                <a asp-controller="Login" asp-action="RegistrarUsuario">Cadastrar</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @*<script src="~/js/Login/script.js"></script>*@

    }
</body>
</html>
