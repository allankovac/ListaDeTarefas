@model LoginViewModel

@{
    ViewData["Title"] = "RegistrarUsuario";
}

<h1>RegistrarUsuario</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistrarUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.Usuario.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="@Model.Usuario.SobreNome" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="@Model.Usuario.Email" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="@Model.Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
